.field
  = f.label :lastname
  %br/
  = f.text_field :lastname

.field
  = f.label :phone
  %br/
  = f.text_field :phone 

.field
  = f.label :address1
  %br/
  = f.text_field :address1

.field
  = f.label :address2
  %br/
  = f.text_field :address2

.field
  = f.label :city
  %br/
  = f.text_field :city

.field
  = f.label :zipcode
