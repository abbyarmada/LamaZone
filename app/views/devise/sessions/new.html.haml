%h2 
  = "Sign in as Admin" if current_page?(new_admin_session_path) || current_page?(admin_session_path)
- if current_page?(new_customer_session_path) || current_page?(customer_session_path)
  %h1
    = link_to image_tag("fb.png", size: "53x64", alt: "Facebook sign in"), customer_omniauth_authorize_path(:facebook)
%p or
- flash.each do |name, msg|
  = content_tag :div, msg
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :email
    %br
    = f.email_field :email, autofocus: true

  .field
    = f.label :password
    %br
    = f.password_field :password, autocomplete: "off"

  .actions
    = f.submit "Sign in"

  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me

= render "devise/shared/links"
