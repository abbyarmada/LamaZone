= f.hidden_field :book_id, readonly: true, value: @book.id
.field
  = f.label :rate, 'Rating'
  = f.number_field :rate, in: 1..10, value: 10
.field
  = f.label :review, 'Text review'
  %br/
  = f.text_area :review
.actions
  = f.submit "Add", class: 'btn btn-warning'
  %span or
  = link_to 'Cancel', @book
