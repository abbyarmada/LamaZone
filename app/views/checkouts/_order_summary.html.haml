- {"SUBTOTAL: " => "#{PriceDecorator.new(item.subtotal).decorate}", "DISCOUNT: " => "#{item.coupon ? item.coupon.discount : 0}%", "SHIPPING: " => "#{PriceDecorator.new(item.shipping_price).decorate}", "TOTAL: " => "#{PriceDecorator.new(item.total_price).decorate}"}.each do |key, val|
  %tr
  %td{colspan: '2'}
  %td{colspan: '2'}
    .summary-left-col
      = key
  %td.summary-right-col
    = val