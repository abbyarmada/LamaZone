- {"#{t("checkout.order.subtotal")}: " => "#{PriceDecorator.new(item.subtotal).decorate}", "#{t("checkout.order.discount")}: " => "#{item.coupon ? item.coupon.discount : 0}%", "#{t("checkout.order.shipping")}: " => "#{PriceDecorator.new(item.shipping_price).decorate}", "#{t("checkout.order.total")}: " => "#{PriceDecorator.new(item.total_price).decorate}"}.each do |key, val|
  %tr
  %td{colspan: '2'}
  %td{colspan: '2'}
    .summary-left-col
      = key
  %td.summary-right-col
    = val