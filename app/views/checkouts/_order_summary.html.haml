- {"SUBTOTAL: " => "#{cool_price(item.subtotal)}", "DISCOUNT: " => "#{item.coupon ? item.coupon.discount : 0}%", "SHIPPING: " => "#{cool_price(item.shipping_price)}", "TOTAL: " => "#{cool_price(item.total_price)}"}.each do |key, val|
  %tr
  %td{colspan: '2'}
  %td{colspan: '2'}
    .summary-left-col
      = key
  %td.summary-right-col
    = val