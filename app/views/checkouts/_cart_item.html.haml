%tr.default
  %td= image_tag cart_item.book.images, size: '30x40'
  %td.cart-title-col
    = link_to "#{cart_item.book.title}", cart_item.book
  %td.cart-price-col
    = PriceDecorator.new(cart_item.book.price).decorate
  %td.cart-quantity-col
    = cart_item.quantity
  %td.cart-total-col
    = PriceDecorator.new(cart_item.price).decorate